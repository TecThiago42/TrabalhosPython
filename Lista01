#entrada de dados
print("Informe o valor: ")
i = input()
#mostra tipo string
print(type(i))

---------------------------------------------------

#entrada de valor com msg separada e junto
print("Informe o valor: ")
i = input()
# ou
i = input("Informe o valor: ")

---------------------------------------------------
#conversão de valores
#para inteiro
var = input("Informe o valor: ")
print(type(var))
var = int(var)
print(type(var))

---------------------------------------------------

#para float
var = input("Informe o valor: ")

print(type(var))
var = float(var)
print(type(var))

---------------------------------------------------

