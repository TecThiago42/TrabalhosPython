
#Cria variável do tipo inteiro

x = 42
print(x)

42


#Cria variável do tipo float
y = 3.14
print(y)

3,14


#Cria variável do tipo string

m = "Python"
m = 'Python'
print(m)

Python

#Cria variável do tipo lógica

w = Verdadeiro
y = Falso
print(y)

Verdadeiro

print(w)

Falso

---------------------------------------------------


#calculadora

x = 40
y = 20
z = 100
w = (x + y) * z / 1000
print(w)

3.6

